<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Categories | Flow Shop</title>

    <link rel="icon" href="favicon/favicon.ico" />
    <link rel="apple-touch-icon" href="favicon/logo192.png" />

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta
      name="description"
      content=" An inventory management app for a fictional store called FlowShop."
    />

    <link rel='stylesheet' href='/stylesheets/index.css'/>
    <link rel='stylesheet' href='/stylesheets/header.css' />
    <link rel='stylesheet' href='/stylesheets/categoryList.css' />

  </head>

<body>

    <header>
        <nav class="logo">
          <a href="./">FLOW SHOP</a>
        </nav>
        <nav>
                <a href="./categories">CATEGORIES</a>
                <a href="./items">ITEMS</a>
        </nav>
    </header>

    <h1>CATEGORIES</h1>

    <a href="./category/create" class="new">CREATE NEW CATEGORY</a>

    <ul>
        <% if (listCategories.length) { %>
            <% listCategories.forEach((category) => { %>
                <li>
                    <a href="<%= category.url %>">
                        <span class="cat-name"><%= category.name %></span>
                        <span class="cat-desc"><%= category.description %></span>
                    </a>
                </li>
            <% }) %>
        <% } else { %>
            <li>No items.</li>
        <% } %>
    </ul>

</body>
</html>