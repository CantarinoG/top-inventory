<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Delete Category | Flow Shop</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta
      name="description"
      content=" An inventory management app for a fictional store called FlowShop."
    />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <link rel='stylesheet' href='/stylesheets/index.css'/>
    <link rel='stylesheet' href='/stylesheets/header.css' />
    <link rel='stylesheet' href='/stylesheets/categoryDelete.css' />

  </head>

<body>

    <header>
        <nav class="logo">
          <a href="../../">FLOW SHOP</a>
        </nav>
        <nav>
                <a href="../../categories">CATEGORIES</a>
                <a href="../../items">ITEMS</a>
        </nav>
    </header>

    <h1><%= category.name.toUpperCase() %></h1>

    <% if(typeof alert != "undefined"){ %>
        <p class="alert"><%= alert %></p>
    <% } %>

    <h2>IN THIS CATEGORY: </h2>

    <div class="card-container">

        <% if (items.length) { %>
            <% items.forEach((item) => { %>
                <div class="card">
                    <% if (typeof item.image == "undefined") {%>
                        <img class="card-img-top" src="/images/noPic.png" alt="Card image">
                    <%} else {%>
                        <img class="card-img-top" src="<%= item.image %>" alt="Card image">
                    <%}%>

                    <div class="card-body">
                    <h4 class="card-title" title="<%= item.name %>"><%= item.name %></h4>
                    <p class="card-text">$<%= item.price.toFixed(2) %></p>
                    <a href="<%= item.url %>" class="see">See Item</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p> No Items. </p>
        <% } %>

    </div>

    <form action="" method="POST">
        <p>Do you really want to delete this category?</p>
        <button type="submit">DELETE</button>
    </form>

</body>
</html>